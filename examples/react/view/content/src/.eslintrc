{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "experimentalObjectRestSpread": true,
    "jsx": true
  },
  "rules" : {
    "semi": [2, "always"],
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/jsx-no-undef": 1,
    "react/prop-types": 1
  },
  "parser": "babel-eslint",
  "plugins": [ "react" ]
}
